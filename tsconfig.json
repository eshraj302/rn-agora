{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es2017"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": "./",   
      "paths": {
         "*": ["./src/*"],
         "@components/*": ["./src/components/*"], 
         "@constants/*": ["./src/constants/*"],
         "@navigation/*": ["./src/navigation/*"],
         "@redux/*": ["./src/redux/*"],
         "@screens/*": ["./src/screens/*"],
         "@services/*": ["./src/services/*"],
         "@shared/*": ["./src/shared/*"],
         "@utils/*": ["./src/utils/*"],
       },
    },
    "exclude": [
      "node_modules",
      "babel.config.s,
      "metro.config.js",
      "jest.config.js"
    ]
  }